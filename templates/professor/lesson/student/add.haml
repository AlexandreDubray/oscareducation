-extends "base.haml"
-load bootstrap3

-block content
  %ol.breadcrumb
    %li
      %a{href: "{% url 'professor:dashboard' %}"} Oscar
    %li= lesson.stage.name
    %li
      Classe
      %a{href: "{% url 'professor:lesson_detail' lesson.pk %}"}
        =lesson.name
    %li.active
      Ajouter un élève

  .panel.panel-default
    .panel-heading
      Ajouter un élève pour la classe
      %i
        =lesson.name

    .panel-body
      %form.form{action: "", method: "post"}
        -csrf_token

        .row
          .col-md-6
            .form-group{class: "{% if add_student_form.id_last_name.errors %}has-error{% elif add_student_form.data and add_student_form.id_last_name %}has-success{% endif %}"}
              %label.control-label{for: "id_last_name"}
                Nom
              %input#id_last_name.form-control{type: "text", required: "", placeholder: "Nom de famille", name: "last_name", value: "{{ add_student_form.last_name.value|default:'' }}"}
              -for error in add_student_form.last_name.errors
                %span.help-block{style: "color: red"}= error

          .col-md-6
            .form-group{class: "{% if add_student_form.id_first_name.errors %}has-error{% elif add_student_form.data and add_student_form.id_first_name %}has-success{% endif %}"}
              %label.control-label{for: "id_first_name"}
                Prénom
              %input#id_first_name.form-control{type: "text", required: "", placeholder: "Prénom", name: "first_name", value: "{{ add_student_form.first_name.value|default:'' }}"}
              -for error in add_student_form.first_name.errors
                %span.help-block{style: "color: red"}= error

        .form-group{class: "{% if add_student_form.id_email.errors %}has-error{% elif add_student_form.data and add_student_form.id_email %}has-success{% endif %}"}
          %label.control-label{for: "id_email"}
            Courriel (optionnel)
          %input#id_email.form-control{type: "text", placeholder: "Courriel", name: "email", value: "{{ add_student_form.email.value|default:'' }}"}

          -for error in add_student_form.email.errors
            %span.help-block{style: "color: red"}= error

        {% buttons %}
          %button.btn.btn-primary{type: "submit"}
            Ajouter
        {% endbuttons %}
