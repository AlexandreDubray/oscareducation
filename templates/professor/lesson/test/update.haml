-extends "base.haml"

-load bootstrap3

-block content
  %ol.breadcrumb
    %li
      %a{href: "{% url 'professor:dashboard' %}"} Oscar
    %li= lesson.stage.name
    %li
      %a{href: "{% url 'professor:lesson_detail' lesson.pk %}"}
        Classe
        =lesson.name
    %li
      %a{href: "{% url 'professor:test_detail' test.pk %}"}
        Test
        =test.name
    %li.active
      Modifier

  %h2 Modifier le test <i>{{ test.name }}</i>

  %form.form{action: "", method: "post"}
    -csrf_token
    -bootstrap_form form
    {% buttons %}
      %button.btn.btn-primary{type: "submit"}
        Modifier
      %a.btn.btn-default{href: "{% url 'professor:test_detail' test.pk %}"}
        Annuler
    {% endbuttons %}
