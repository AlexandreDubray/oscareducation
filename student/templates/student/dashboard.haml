-extends "base.haml"

-block content

  -if user.student.teststudent_set.exists
    %h2 Mes tests:
    %hr

  %ul
    -for student_test in user.student.teststudent_set.all
      -if not student_test.finished
        %li
          %a{href: "{% url 'student_pass_test' student_test.id %}"}= student_test.test.name

  %h5 Légende

  .row
    .col-md-6
      %ul.legend-list
        %li.legend
          .btn.btn-default
            %i.fa.fa-plus-square
          nombres
        %li.legend
          .btn.btn-default
            %i.fa.fa-cube
          solides et figures
        %li.legend
          .btn.btn-default
            %i.fa.fa-arrows-v
          grandeurs
        %li.legend
          .btn.btn-default
            %i.fa.fa-bar-chart
          traitement de données
    .col-md-6
      %ul.legend-list
        %li.legend
          .btn.btn-default
            %i.fa.fa-area-chart
          fonctions
        %li.legend
          .btn.btn-default
            %i.fa.fa-pie-chart
          probabilités et statistiques
        %li.legend
          .btn.btn-default
            %i.fa.fa-gears
          compétences transversales

  %h2 Mon empreinte:
  %hr

  -regroup user.student.skills_map by skill.stage as levels

  -for level in levels
    %h5
      Niveau {{ level.grouper }}

    %table
      -for student_skill in level.list
        -if forloop.first
          <tr>
        -elif forloop.counter0|divisibleby:12
          </tr><tr>
        %td{style: "text-align: center; width: 100px; padding: 10px;"}
          %a{type: "button", style: '{% if student_skill.tested or student_skill.acquired %}color: white;{% endif %}; width: 100%', href: '{% url "student_skill_pedagogic_ressources" student_skill.skill.code %}', class: "btn btn-{% if student_skill.acquired %}success{% elif student_skill.tested %}warning{% else %}default{% endif %} skill"}
            %i{class: "fa fa-{{ student_skill.skill.image }}", title: "{{ student_skill.skill.name }}"}

        -if forloop.last
          </tr>

  %br
  %br
  %br
