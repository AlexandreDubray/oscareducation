-extends "base.haml"

-block content
  %h2 Compétence
    =object.code
    %small= object.name
  %hr

  .well
    %h3 Synthèse <span style="color: #F58025">O</span>scar
    %hr

    =object.oscar_synthese|default:""|safe

  .well{style: "background-color: white; border-color: #9FB73B"}
    %img{src: "{{ STATIC_URL }}img/khanacademy-logo.png", width: "143px"}

    %center
      %p
        <iframe height="480" frameborder="0" width="800" mozallowfullscreen="" webkitallowfullscreen="" allowfullscreen="" src="https://www.youtube.com/embed/qAI4SptgdBo?enablejsapi=1&amp;html5=1&amp;wmode=transparent&amp;modestbranding=1&amp;rel=0&amp;fs=1&amp;showinfo=0&amp;autoplay=0&amp;origin=https://fr.khanacademy.org" data-translatedyoutubelang="fr" data-translatedyoutubeid="qAI4SptgdBo" data-youtubeid="qAI4SptgdBo" type="text/html" class="player" id="iframePlayer_view39"></iframe>

      %a{href: "https://fr.khanacademy.org/math/algebra-basics/core-algebra-foundations/core-algebra-foundations-negative-numbers/v/ordering-negative-numbers", style: "color: #9FB73B; font-weight: bold"}
        Voir sur la KhanAcademy

  .well
    %h3 Vidéos
    %hr

    %ul
      -for video in object.videoskill_set.all
        %li
          %a{href: "{{ video.url }}"}
            =video.title
          \-
          =video.duration
          \-
          difficulté:
          =video.difficulty

  .well
    %h3 Exercices
    %hr

    %ul
      -for exercice in object.exerciceskill_set.all
        %li
          %a{href: "{{ MEDIA_URL }}{{ exercice.questions }}"}
            =exercice.title
          \-
          =exercice.duration
          \-
          difficulté:
          =exercice.difficulty
          -if exercice.answers
            \-
            %a{href: "{{ MEDIA_URL }}{{ exercice.answers }}"}
              réponses

  .well
    %h3 Liens externes
    %hr

    %ul
      -for external_link in object.externallinkskill_set.all
        %li
          %a{href: "{{ external_link.url }}"}
            =external_link.title
          \-
          =external_link.duration
          \-
          difficulté:
          =external_link.difficulty

  :css
    h3 {
      margin-top: 5px;
    }
