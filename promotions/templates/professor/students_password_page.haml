%html
  %head
    %title

  :css
    body {
      margin: 20px;
    }
    table {
      width: 100%;
    }
    td {
      border-bottom: dashed 3px black;
      padding: 20px;
      width: 33%
    }
    td.last {
      border-bottom: none;
    }

  %body
    %table
      -for student in lesson.students.all
        %tr
          %td{class: "{% if forloop.last %}last{% endif %}"}
            =student.user.last_name|capfirst
            =student.user.first_name|capfirst
          %td{class: "{% if forloop.last %}last{% endif %}"}
            identifiant :
            =student.user.username
          %td{class: "{% if forloop.last %}last{% endif %}"}
            mot de passe :
            pouet
